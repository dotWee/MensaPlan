<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        style="@style/AppTheme.Dialog.Ingredients.Section.LinearLayout"
        android:padding="0dp">

        <LinearLayout
            android:id="@+id/linearLayoutTitle"
            style="@style/AppTheme.Dialog.Ingredients.Section.LinearLayout"
            android:padding="16dp">

            <TextView
                android:id="@+id/textViewName"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="@string/app_name" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayoutIngredients"
                style="@style/AppTheme.Dialog.Ingredients.Section.LinearLayout">

                <TextView
                    style="@style/AppTheme.Dialog.Ingredients.Section.TextView.Title"
                    android:text="@string/ingredients" />

                <TextView
                    android:id="@+id/textViewIngredients"
                    style="@style/AppTheme.Dialog.Ingredients.Section.TextView" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutAllergens"
                style="@style/AppTheme.Dialog.Ingredients.Section.LinearLayout">

                <TextView
                    style="@style/AppTheme.Dialog.Ingredients.Section.TextView.Title"
                    android:text="@string/allergens" />

                <TextView
                    android:id="@+id/textViewAllergens"
                    style="@style/AppTheme.Dialog.Ingredients.Section.TextView" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutLabels"
                style="@style/AppTheme.Dialog.Ingredients.Section.LinearLayout">

                <TextView
                    style="@style/AppTheme.Dialog.Ingredients.Section.TextView.Title"
                    android:text="@string/labels" />

                <TableLayout
                    android:id="@+id/tableLayoutLabels"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearLayoutNodata"
                style="@style/AppTheme.Dialog.Ingredients.Section.LinearLayout"
                android:visibility="gone">

                <TextView
                    style="@style/AppTheme.Dialog.Ingredients.Section.TextView.Title"
                    android:text="@string/no_data_available" />
            </LinearLayout>

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

    </LinearLayout>

</ScrollView>