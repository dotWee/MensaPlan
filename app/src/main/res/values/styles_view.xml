<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.View" />

    <style name="AppTheme.View.Openinghours" />

    <style name="AppTheme.View.Openinghours.Section">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.View.Openinghours.Section.Wrapper">
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="AppTheme.View.Openinghours.Section.Headline">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Headline</item>
    </style>

    <style name="AppTheme.View.Openinghours.Section.Card">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="AppTheme.View.Openinghours.Section.Table">
        <item name="android:layout_margin">8dp</item>
        <item name="android:stretchColumns">*</item>
    </style>

    <style name="AppTheme.View.Openinghours.Section.TextView">
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>

        <item name="android:textColor">@android:color/secondary_text_light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
</resources>