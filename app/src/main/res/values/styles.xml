<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/md_blue_grey_800</item>
        <item name="colorPrimaryDark">@color/md_blue_grey_900</item>
        <item name="colorAccent">@color/md_lime_300</item>
    </style>

    <style name="AppTheme.Splash" parent="Theme.AppCompat.Light.NoActionBar" />

    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Dialog.Closed">
        <item name="colorAccent">@color/md_blue_300</item>
    </style>

    <style name="AppTheme.Dialog.Closed.Section">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.Dialog.Closed.Section.Header">
        <item name="android:clickable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingBottom">20dp</item>
    </style>

    <style name="AppTheme.Dialog.Closed.Section.Title">
        <item name="android:text">@string/dialog_closed_title</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
    </style>

    <style name="AppTheme.Dialog.Closed.Section.Content">
        <item name="android:paddingRight">24dp</item>
        <item name="android:paddingLeft">24dp</item>
    </style>

    <style name="AppTheme.Dialog.Closed.Section.Footer">
        <item name="android:layout_height">52dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:gravity">end</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="AppTheme.Dialog.Closed.Section.Button" parent="Base.Widget.AppCompat.Button.Borderless.Colored">
        <item name="colorAccent">@color/md_blue_300</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="AppTheme.Dialog.Closed.Section.Message">
        <item name="android:text">@string/dialog_closed_message</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
    </style>

    <style name="AppTheme.Dialog.Ingredients">
        <item name="colorAccent">@color/md_lime_300</item>
    </style>

    <style name="AppTheme.Dialog.Ingredients.Section">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.Dialog.Ingredients.Section.LinearLayout">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:orientation">vertical</item>

        <item name="android:clickable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="AppTheme.Dialog.Ingredients.Section.TextView">
        <item name="android:textColor">@android:color/secondary_text_light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="AppTheme.Dialog.Ingredients.Section.TextView.Title">
        <item name="android:textColor">@android:color/primary_text_light_nodisable</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
