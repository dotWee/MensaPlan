<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/md_teal_800</item>
        <item name="colorPrimaryDark">@color/md_teal_900</item>
        <item name="colorAccent">@color/md_lime_300</item>
    </style>

    <style name="AppTheme.MainActivity" parent="AppTheme" />

    <style name="AppTheme.MainActivity.Coordinator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="AppTheme.MainActivity.AppBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="AppTheme.MainActivity.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="AppTheme.MainActivity.Control" />

    <style name="AppTheme.MainActivity.Control.Space">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="AppTheme.MainActivity.Control.Caption" parent="TextAppearance.AppCompat.Body1">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="AppTheme.MainActivity.Control.Spinner">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="AppTheme.MainActivity.Table">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:stretchColumns">0,2</item>
    </style>

    <style name="AppTheme.MainActivity.Table.Row">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="AppTheme.MainActivity.Table.Row.Bottom">
        <item name="android:paddingBottom">16dp</item>
    </style>

</resources>