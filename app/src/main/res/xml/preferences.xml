<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/preference_appearance_title">

        <SwitchPreference
            android:defaultValue="true"
            android:key="@string/preference_appearance_switch_colorseparation"
            android:summary="@string/preference_appearance_switch_colorseparation_summary"

            android:title="@string/preference_appearance_switch_colorseparation_title" />

        <ListPreference
            android:defaultValue="@string/price_student"
            android:entries="@array/price_values"

            android:entryValues="@array/price_values"
            android:key="@string/preference_appearance_list_price"
            android:summary="@string/preference_appearance_list_price_summary"

            android:title="@string/preference_appearance_list_price_title" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/preference_cache_title">

        <Preference
            android:key="@string/preference_cache_reset_settings"
            android:summary="@string/preference_cache_reset_settings_summary"
            android:title="@string/preference_cache_reset_settings_title" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="preference_copyright"
        android:title="Licenses" />

</PreferenceScreen>